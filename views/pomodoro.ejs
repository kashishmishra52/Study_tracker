<!-- views/pomodoro.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pomodoro Timer</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/pomodoro.css">
</head>
<body>

 <nav class="navbar">
  <div class="logo">
    <img src="/study.png" alt="App Logo" />
  </div>

  <ul class="nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/dashboard">Dashboard</a></li>
    <li><a href="/pomodoro">Pomodoro</a></li>
    <li><a href="/task-manager">Tasks</a></li>
    <li><a href="/motivation">Motivation</a></li>
  </ul>

  <div class="nav-right">
  <% if (currentUser) { %>
    <div class="user-dropdown">
      <span class="username"><%= currentUser.username %> â–¼</span>
      <ul class="dropdown-menu">
        <li><a href="/logout">Logout</a></li>
        <li><a href="/delete-account">Delete Account</a></li>
      </ul>
    </div>
  <% } else { %>
    <a href="/login" class="login-button">Login/Register</a>
  <% } %>
</div>

</nav>



  <main class="container" id="pomodoro">
    <div class="timer-display">
      <span id="minutes">25</span>:<span id="seconds">00</span>
    </div>
    <div class="controls">
      <button onclick="startTimer()">Start</button>
      <button onclick="resetTimer()">Reset</button>
    </div>
    <p>Pomodoro Sessions Completed: <span id="sessionCount">0</span></p>
  </main>

  <script src="/pomodoro.js"></script>

</body>
</html>
